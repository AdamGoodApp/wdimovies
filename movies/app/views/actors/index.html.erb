<h1>Listing actors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Rating</th>
  </tr>

<% @actors.each do |actor| %>
  <tr>
    <% if actor.actors_image.thumb.url %>
      <td><%= image_tag actor.actors_image.thumb.url %></td>
    <% end %>
    <td><%= link_to actor.name, actor %></td>
    <td><%= actor.rating %></td>
    <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
    <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

