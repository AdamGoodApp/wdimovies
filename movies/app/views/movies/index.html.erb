<h1>Listing movies</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Year</th>
    <th>Rating</th>
    <th>Certificate</th>
    <th>Gross</th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <% if movie.movie_image.thumb.url %>
      <td><%= image_tag movie.movie_image.thumb.url %></td>
    <% end %>
    <td><%= link_to movie.name, movie%></td>
    <td><%= movie.year %></td>
    <td><%= movie.rating %></td>
    <td><%= movie.certificate %></td>
    <td>$<%= movie.gross %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

